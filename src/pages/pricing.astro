---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout betweenMainAndFooterClass="grow" mainClass="w-[95%] 2xl:w-1/2 place-content-center text-center items-center self-center mt-24 flex flex-col">

    <h1 class="text-6xl self-center">Find your way into security</h1>

	<div class="flex flex-row w-full mt-36 place-content-center gap-8">
        
        <div class="flex flex-col bg-gradient-to-bl from-neutral-300 to-neutral-600 rounded-xl w-fit">
            <div class="bg-[#360E6E] p-8 rounded-xl m-[1px] w-fit h-full flex flex-col">
                <h2 class="text-left">Individual</h2>
                <p class="text-left opacity-75 mb-0 text-sm">Free to use</p>
                <p class="flex flex-row mt-1">
                    <span class="text-4xl font-bold flex">$0</span>
                    <span class="self-end">/month</span>
                </p>
                <div class="h-[1px] bg-gradient-to-r from-white to transparent w-full mb-4"></div>
                <p class="font-bold text-md">Features for individuals</p>
                <div class="flex flex-col ml-0 gap-4">
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                         Unlimited passwords
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        Multi-encryption
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        Autocompletion
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="14" viewBox="0 0 14 14" fill="none" opacity="0.6">
                            <path d="M13 1L1 13" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                            <path d="M1 1L13 13" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        Formation of the IT Team
                    </span>
                </div>
            </div>
        </div>

        <div class="-z-10 flex flex-col bg-gradient-to-tr from-[#8B398B] to-[#FF5CB2] rounded-xl w-fit drop-shadow-[0_0_10px_rgba(255,0,255,0.7)]">
            <div class="bg-[#360E6E] p-8 rounded-xl m-[1px] w-fit h-full flex flex-col">
                <h2 class="text-[#FF5CB2] text-left">Pro</h2>
                <p class="text-left opacity-75 mb-0 text-sm">Starting at</p>
                <p class="flex flex-row mt-1">
                    <span class="text-4xl font-bold flex">$4</span>
                    <span class="self-end">/month/user</span>
                </p>
                <div class="h-[1px] bg-gradient-to-r from-white to transparent w-full mb-4"></div>
                <p class="font-bold text-md">Features for businesses</p>
                <div class="flex flex-col ml-0 gap-4">
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                         Unlimited passwords
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        Credential lending
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        Multi-encryption
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        Autocompletion
                    </span>
                </div>
            </div>
        </div>
	</div>

    

    <div class="flex flex-col w-full my-36">
        <h1 class="flex self-center text-4xl">Which plan is right for you?</h1>
        
        <div class="flex flex-row bg-[#360E6E] rounded-2xl w-full border-pink-500 border border-solid drop-shadow-[0_0_10px_rgba(255,0,255,0.7)]">

            <div class="p-8 flex flex-col basis-3/4 w-full border border-solid border-neutral-500 border-b-0 border-t-0 border-l-0">
                <h2 class="text-left">Estimate your monthly usage</h2>
                <div class="flex flex-col w-full">
                    <div id="output" class="self-end text-4xl font-bold">0 Users</div>
                    <input class="w-full appearance-none bg-gradient-to-r from-[#FF5CB2] to-blue-600 h-[6px] rounded-full" type="range" name="searches" min="0" max="10000" step="1" value="1">
                    <div class="flex flex-row justify-between mt-4">
                        <span>0</span>
                        <span>10 000</span>
                    </div>
                    <p class="text-left mt-16">
                        The pricing is based on the number of users you have in your organization, the cost of formation of the IT team and the cost of the implementation   of ShieldPass.
                    </p>
                </div>
            </div>

            <div class="flex flex-col basis-1/4 w-full text-left p-8">
                <h2 class="text-[#FF5CB2] text-left">Pro</h2>
                <p class="flex flex-row">
                    <span class="text-5xl font-bold flex">$1440</span>
                    <span class="self-end whitespace-nowrap">Once</span>
                </p>
                <p class="flex flex-row">
                    <span id="prix" class="text-5xl font-bold flex">$4</span>
                    <span class="self-end">/month</span>
                </p>
                <div class="flex flex-col ml-0 gap-4 mt-4">
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                         Support service
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        Formation of the IT Team
                    </span>
                    <span class="flex whitespace-nowrap text-sm">
                        <svg class="self-center mr-2" width="18" height="13" viewBox="0 0 18 13" fill="none">
                            <path d="M17 1L6 12L1 7" stroke="#FF5CB2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                        The Graph node implementation
                    </span>
                </div>
            </div>

        </div>
        <script is:inline>
            const output = document.getElementById('output');
            const prix = document.getElementById('prix');
            const input = document.querySelector('input');
            input.addEventListener('input', () => {
                output.innerHTML = input.value + " Users";
                prix.innerHTML = "$"+(input.value*4).toFixed(0);
            });
        </script>
    </div>

</BaseLayout>