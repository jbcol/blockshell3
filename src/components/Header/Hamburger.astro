---
const { classHamburgerButton } = Astro.props;
---
<button class={classHamburgerButton} onclick="openNav()">
  <div class="flex flex-col gap-y-[16px]">
      <span class="flex bg-white w-[70px] h-[10px] rounded-full"></span>
      <span class="flex bg-white w-[70px] h-[10px] rounded-full"></span>
      <span class="flex bg-white w-[70px] h-[10px] rounded-full"></span> 
  </div>
</button>

 
<script is:inlined>
  function openNav() {
    document.getElementById("mySidepanel").classList.remove("hidden");
  }

  function closeNav() {
    document.getElementById("mySidepanel").classList.add("hidden");
  }
</script>
