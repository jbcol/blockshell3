---
import Header from '../components/Header/Header.astro';
import Footer from '../components/Footer.astro';
const {mainClass, betweenMainAndFooterClass} = Astro.props;
---

<!DOCTYPE html>
<html class="scroll-smooth" lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.png`} />
		<meta name="generator" content={Astro.generator} />
		<title>BlockShell</title>
		<script type="module" src={`${import.meta.env.BASE_URL}`+'canva.js'}></script>
		<meta content="width=device-width,initial-scale=1" name="viewport">
	</head>
	<body class="flex flex-col bg-gradient-to-b from-[#300270] to-30% to-[#0E0021] left-0 text-white m-0 min-h-screen font-sans w-full">
		<Header headerclass="place-content-center backdrop-blur-md flex flex-row w-full bg-opacity-5 bg-[#300270] border-b border-solid border-zinc-600 border-t-0 border-r-0 border-l-0 top-0 sticky drop-shadow-[0_0_200px_rgba(255,0,255,0.3)] z-[100]"/>
		<main class={mainClass}>
            <slot/>
		</main>
		<div class={betweenMainAndFooterClass}></div>
        <Footer footerclass="flex flex-row w-full bg-[#2F026E] place-content-center border-b border-solid border-zinc-600 border-t-0 border-r-0 border-l-0"/>
	</body>
</html>

